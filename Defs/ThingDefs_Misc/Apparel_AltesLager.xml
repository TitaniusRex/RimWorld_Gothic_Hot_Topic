<?xml version="1.0" encoding="utf-8"?>

<Defs>

	<!--====================================-->
	
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>GHT_ShadowRobe</defName>
		<label>shadow's robe</label>
		<description>Simple attire. Consists of a mixture of leather, fabric and metal.</description>
		<possessionCount>1</possessionCount>
		<recipeMaker>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
			<displayPriority>210</displayPriority>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/AltesLager/ShadowRobe/ShadowRobe</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.85</drawSize>
		</graphicData>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>300</MaxHitPoints>
			<WorkToMake>11000</WorkToMake>
			<Mass>4</Mass>
			<StuffEffectMultiplierArmor>0.80</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.80</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.30</StuffEffectMultiplierInsulation_Heat>
			<Flammability>0.6</Flammability>
			<ArmorRating_Sharp>1.00</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.26</ArmorRating_Blunt>
			<ArmorRating_Heat>0.27</ArmorRating_Heat>
			<Insulation_Cold>8</Insulation_Cold>
			<Insulation_Heat>6</Insulation_Heat>
			<EquipDelay>1.5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.3</SlaveSuppressionOffset>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/AltesLager/ShadowRobe/ShadowRobe</wornGraphicPath>
			<layers>
				<li>Shell</li>
			</layers>
			<tags>
				<li>MedievalMilitary</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
		<tradeTags>
			<li>Clothing</li>
			<li>Armor</li>
		</tradeTags>
		<costList>
			<Steel>20</Steel>
		</costList>
		<costStuffCount>80</costStuffCount>
	</ThingDef>

